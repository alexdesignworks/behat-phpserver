<?xml version="1.0"?>
<ruleset name="behat-phpserver">
  <description>The coding standard for behat-phpserver.</description>

  <rule ref="Symfony2" />

  <file>src/</file>
  <file>tests/</file>

  <rule ref="PSR1.Classes.ClassDeclaration.MissingNamespace">
